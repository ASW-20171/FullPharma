app-loader
  background rgba(0,0,0,.5)
  height 100vh
  left 0
  position fixed
  top 0
  width 100%
  z-index 1000

  .loader-wrapper
    background #fff
    border-radius 4px
    box-shadow 0 7px 8px -4px rgba(0,0,0,.2),0 13px 19px 2px rgba(0,0,0,.14),0 5px 24px 4px rgba(0,0,0,.12)
    height 100px
    margin auto
    position relative
    text-align center
    top calc(50vh - 50px)
    width 100px

    .preloader-wrapper
      margin 26px auto

app-pagination
  display block
  text-align center

  .pagination
    & > li
      vertical-align top
      &.icono-link
        padding 0px
        line-height 1rem

md-tooltip
  border-radius 5px
  background-color #323232
  font-size .8rem
